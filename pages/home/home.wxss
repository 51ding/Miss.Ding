page {
  width: 100%;
  height: 100%;
}

.max-box {
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.box {
  width: 44%;
  margin: 4% 0 0 4%;
}

.box-image {
  width: 100%;
  padding-top: 100%;
  position: relative;
  border-radius: 15rpx;
}

.box-image image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 15rpx;
}

.add-box {
  width: 44%;
  padding-top: 44%;
  animation-fill-mode: 0 0 0 4%;
}

.add-box image {
  width: 30%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -15%;
  margin-top: -15%;
}

.box-title {
  margin-top: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #333;
}

.box-add-image {
  background-color: #DCD9D4; 
 background-image: linear-gradient(to bottom, rgba(255,255,255,0.50) 0%, rgba(0,0,0,0.50) 100%), radial-gradient(at 50% 0%, rgba(255,255,255,0.10) 0%, rgba(0,0,0,0.50) 50%); 
 background-blend-mode: soft-light,screen;
}

.box-add-image image {
  width: 25%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -12.5%;
  margin-top: -12.5%;
}

.add-album {
  position: fixed;
  width: 100%;
  height: 50%;
  background-color: #fff;
  bottom: -50%;
  left: 0;
  right: 0;
  background-image: url("http://img.hb.aicdn.com/a5aa4c20d5bd510c4206d0be06ba029e4779c02014772-HAq9Ue_fw658");
  background-repeat:repeat
}

.add-album-title {
  font-weight: bold;
  color: #222;
  font-size: 35rpx;
  text-align: center;
  padding: 15rpx 0;
  margin:0 60rpx;
  border-bottom: 1px solid #ccc;
}

.add-album-title-icon {
  height: 100%;
  position: absolute;
  right: 60rpx;
  top: 14rpx;
  font-weight: bold;
}

.add-album-title-icon image {
  width: 40rpx;
}

.add-album-content {
  padding: 40rpx 30rpx;
  font-size: 30rpx;
}

.album-name image {
  width: 30rpx;
  vertical-align: middle;
}

.album-name text {
  margin-left: 30rpx;
  font-weight: bold;
}
.tiptop {
  display: inline-block;
  vertical-align: middle;
  height: 100%;
  width: 0;
}

.album-name-input {
  padding: 30rpx 40rpx;
}

.album-name-input input{
  padding: 10rpx;
  background-color: #EFEFEF;
  color: #888888;
  font-size: 30rpx;
}

.create-album{
  width: 75%;
  height: 100rpx;
  margin: 0 auto;
  background-color: #6CAEF8;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}