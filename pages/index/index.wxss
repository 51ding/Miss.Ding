view {
  margin: 0;
  padding: 0;
}

page {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(to right, #d299c2 0%, #fef9d7 100%);
  background-repeat: repeat-y;
}

.container {
  width: 96%;
  column-count: 2;
  column-gap: 10rpx;
  margin: 0 auto;
  padding-top: 15rpx;
}

.card {
  display: inline-block;
  width: 100%;
  height: 100%;
  overflow: auto;
  overflow: hidden;
}

.card image {
  width: 100%;
  border-radius: 6px;
}

.uploadImage {
  position: fixed;
  right: 30rpx;
  bottom: 110rpx;
  width: 150rpx;
  height: 150rpx;
  background-color: #eee;
  border-radius: 50%;
  text-align: center;
}

.uploadImage image {
  width: 55%;
  vertical-align: middle;
}

.align {
  height: 97%;
  display: inline-block;
  vertical-align: middle;
}

.music-container {
  background-color: #fff;
  position: fixed;
  top: 25rpx;
  right: 25rpx;
  border-radius: 50%;
  padding: 4rpx;
  border:1px solid #ccc;
  z-index: 100;
}

.music{
  width: 70rpx;
  height: 70rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  background-image: linear-gradient(to top, #e8198b 0%, #c7eafd 100%);
}

.music image {
  width: 65rpx;
}


.upload{
  position: fixed;
  width:100rpx;
  height:100rpx;
  left:50%;
  top:50%;
  background-color:red;
}