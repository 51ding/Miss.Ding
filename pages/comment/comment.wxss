.container {
  padding: 30rpx 30rpx 100rpx 30rpx;
}

.comment {
  border-bottom: 1px solid #ccc;
}

.comment-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  margin-top: 25rpx;
}

.comment-title image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.comment-title .date {
  font-size: 14px;
  color: #777;
  position: absolute;
  right: 30rpx;
}

.comment text {
  font-weight: bold;
  color: #333;
  font-size: 13px;
  margin-left: 25rpx;
}

#nick-name{
  font-size:16px;
}

.comment-content {
  padding: 15rpx;
  font-size: 37rpx;
  letter-spacing: 2px;
  text-align: justify;
  word-break:break-all;
  white-space:normal;
}

.commentPanel {
  position: fixed;
  right: 0;
  left: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
  height: 38px;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.writePanel {
  border: 1px sold #ccc;
  background-color: #ccc;
  border-radius: 45px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
}

.writePanel image {
  display: inline-block;
  width: 30px;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.writePanel input {
     -webkit-appearance: none;
    background-color: #ccc;
    background-image: none;
    border-radius: 4px;
    color: #606266;
    display: inline-block;
    font-size: 17px;
    height: 30px;
    line-height: 30px;
    outline: none;
    padding: 0 3px;
    transition: border-color .2s cubic-bezier(.645,.045,.355,1);
    width: 100%;
}

