.container {
  padding: 30rpx 30rpx 100rpx 30rpx;
}

.comment {
  border-bottom: 1px solid #ccc;
}

.comment-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  margin-top: 25rpx;
}

.comment-title image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-title .date {
  font-size: 35rpx;
  color: #777;
  position: absolute;
  right: 30rpx;
}

.comment text {
  font-weight: bold;
  color: #333;
  font-size: 35rpx;
  margin-left: 25rpx;
}

.comment-content {
  padding: 15rpx;
  font-size: 37rpx;
  letter-spacing: 2px;
  text-align: justify;
}

.commentPanel {
  position: fixed;
  right: 0;
  left: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
  height: 70rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.writePanel {
  border: 1px sold #ccc;
  background-color: #ccc;
  border-radius: 45px;
  display: flex;
  flex-direction: row;
  ruby-align: center;
  padding: 10rpx;
}

.writePanel image {
  width: 50rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.writePanel input {
  display: inline-block;
  width: 500rpx;
  font-size: 30rpx;
}
